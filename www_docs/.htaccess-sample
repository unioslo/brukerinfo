DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On

    # If installed to a subfolder, uncomment and change this
    #RewriteBase /cerebrum/your-username/brukerinfo/www_docs/

    # If index.php is part of the URL, strip it and redirect
    RewriteCond %{THE_REQUEST} ^GET.*index\.php [NC]
    RewriteRule (.*?)index\.php/*(.*) $1$2 [R=302,NE,L]

    # Redirect requests for non-existent files or directories to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
